    constructor(private db: Database) {}
    
    createUser(userData: any) { /* ... */ }    // Gerencia usuários
    deleteUser(userId: string) { /* ... */ }   // Gerencia usuários  
    sendEmail(to: string, subject: string) { /* ... */ }  // Envia emails?!
    generateReport() { /* ... */ }             // Gera relatórios?!
    validateUserData(userData: any) { /* ... */ } // Valida dados?!
}

// BOM: Cada classe tem uma única responsabilidade
