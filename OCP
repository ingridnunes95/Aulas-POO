// Open/Closed Principle (OCP)
//"Aberto para extens√£o, fechado para modifica√ß√£o"

// Imagine que temos um processador de pagamentos
// Queremos adicionar novos m√©todos sem modificar o c√≥digo existente

// Interface que define o contrato para todos os m√©todos de pagamento
interface PaymentMethod {
    process(amount: number): void;
}

// Cada classe implementa a interface √† sua maneira
class CreditCardPayment implements PaymentMethod {
    process(amount: number): void {
        console.log(`üí≥ Processando R$ ${amount} via cart√£o de cr√©dito`);
        // L√≥gica espec√≠fica do cart√£o
    }
}

class PayPalPayment implements PaymentMethod {
    process(amount: number): void {
        console.log(`Processando R$ ${amount} via PayPal`);
        // L√≥gica espec√≠fica do PayPal
    }
}

class BankTransferPayment implements PaymentMethod {
    process(amount: number): void {
        console.log(`Processando R$ ${amount} via transfer√™ncia banc√°ria`);
        // L√≥gica espec√≠fica de transfer√™ncia
    }
}

// O processador principal N√ÉO precisa mudar quando adicionamos novos m√©todos
class PaymentProcessor {
    processPayment(amount: number, method: PaymentMethod): void {
        console.log(`Iniciando processamento de R$ ${amount}`);
        method.process(amount); // Delega o trabalho para o m√©todo espec√≠fico
        console.log("Pagamento processado com sucesso!");
    }
}

// Uso: Muito f√°cil adicionar novos m√©todos de pagamento!
const processor = new PaymentProcessor();
processor.processPayment(100, new CreditCardPayment());
processor.processPayment(200, new PayPalPayment());

// Amanh√£ posso criar BitcoinPayment sem modificar o PaymentProcessor!
